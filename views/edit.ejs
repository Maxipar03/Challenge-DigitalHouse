<%- include("./partials/head") %>

<%- include("./partials/header") %>
<body>
    <div class="container">
<h1>Edita tu zapatilla</h1>
<form action="/edit/<%=products.id%> " method="POST" class="row">
    <div class="col-6">
        <label for="imageInput" class="form-label mt-2">Image</label>
        <input type="text" name="image" class="form-control" value="<%=images.url%> ">
        <% if (locals.errors && errors.image) {%>
            <div class="text-danger">
                <%= errors.image.msg %>
            </div>
        <% } %>
    </div>
    <div class="col-6">
        <label for="nameInput" class="form-label mt-2">Name</label>
        <input type="text" name="name" class="form-control" value="<%=products.name%>">
        <% if (locals.errors && errors.name) {%>
        <div class="text-danger">
            <%= errors.name.msg %>
        </div>
        <% } %>
    </div>
    <div class="col-6">
        <label for="brandInput" class="form-label mt-2">Brand</label>
        <select name="brand" class="form-select">
            <% for (let i = 0; i < brand.length; i++){%>
            <% if (brand[i].id == products.brand_id) { %>
            <option value="<%= brand[i].id %> " selected>
                <%= brand[i].name %>
            </option>
            <% }else{ %>
            <option value="<%= brand[i].id %> ">
                <%= brand[i].name %>
            </option>
            <% } %>

            <% } %>
        </select>
    </div>
    <div class="col-6">
        <label for="materialInput" class="form-label mt-2">Material</label>
        <select name="material" class="form-select">
            <% for (let i = 0; i < material.length; i++){%>
                <% if (material[i].id == products.material_id) { %>
            <option value="<%= material[i].id %>" selected>
                <%= material[i].name %>
            </option>
            <% }else{ %>
                <option value="<%= material[i].id %> ">
                    <%= material[i].name %>
                </option>
            <% } %>
            <% } %>
        </select>
    </div>
    <div class="col-6">
        <label for="colorInput" class="form-label mt-2" >Color</label>
        <select name="color" class="form-select">
            <% for (let i = 0; i < color.length; i++){%>
                <% if (color[i].id == products.color_id) { %>
            <option value="<%= color[i].id %>" selected>
                <%= color[i].name %>
            </option>
            <% }else{ %>
            <option value="<%= color[i].id %> ">
                <%= color[i].name %>
            </option>
            <% } %>
            <% } %>
        </select>
    </div>
    <div class="col-1">
        <label for="priceInput" class="form-label mt-2">Price</label>
        <input type="text" class="form-control" name="price" value="<%=products.price%>">
        <% if (locals.errors && errors.price) {%>
        <div class="text-danger">
            <%= errors.price.msg %>
        </div>
        <% } %>
    </div>
    <div>
        <label for="textInput" class="form-label mt-2">Description</label>
        <input type="text" name="description" value="<%=products.description%>" class="form-control">
        <% if (locals.errors && errors.description) {%>
        <div class="text-danger">
            <%= errors.description.msg %>
        </div>
        <% } %>
    </div>
    <div class="d-grid gap-4 col-1 mx-auto m-3">
    <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>
</div>
</body>