<!DOCTYPE html>
<html>
<%- include("./partials/head") %>
<%- include("./partials/header") %>

<body>
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
       <a href="/products/1"><img src="/images/Image-jordan.jpg" class="d-block w-100" alt="..."></a>
        <div class="carousel-caption d-none d-md-block">
          <h5 class="carousel-name"><%=products[0].name%></h5>
          <p class="carousel-description"><%=products[0].description%></p>
        </div>
      </div>
      <div class="carousel-item">
       <a href="/products/3"><img src="/images/Image-jordan2.jpg" class="d-block w-100" alt="..."></a>
        <div class="carousel-caption d-none d-md-block">
          <h5 class="carousel-name"><%=products[2].name%></h5>
          <p class="carousel-description"><%=products[2].description%></p>
        </div>
      </div>
      <div class="carousel-item">
        <a href="products/2"><img src="/images/Image-jordan3.webp" class="d-block w-100" alt="..."></a>
        <div class="carousel-caption d-none d-md-block">
          <h5 class="carousel-name"><%=products[1].name%></h5>
          <p class="carousel-description"><%=products[1].description%></p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
    <h1>Algunos de los productos</h1>
      <%products.forEach(product => { %>
          
      <article class="card-product">
        <div class="card" style="width: 18rem;">
          <img src="<%= product && product.images && product.images.url %>" class="card-img-top">
          <div class="card-body">
          <h1 class="card-title"><%=product.name%></h1>
          <h3 class="card-price"><%=product.price%> USD</h3>
          <h6 class="card-brand"><%=product.brands.name%></h6>  
        </div>      
      </article>
 
 
  <%})%>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.2/dist/umd/popper.min.js" integrity="sha384-q9CRHqZndzlxGLOj+xrdLDJa9ittGte1NksRmgJKeCV9DrM7Kz868XYqsKWPpAmn" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>    
    <%- include("./partials/footer") %>
</body>

  </div>
  

</html>